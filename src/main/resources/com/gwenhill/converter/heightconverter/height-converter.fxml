<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: aqua;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gwenhill.converter.heightconverter.HeightConverterController">
   <children>

      <!-- Feet Label -->
      <Label layoutX="60.0" layoutY="60.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Feet">
         <font>
            <Font name="Verdana Bold" size="14.0" />
         </font></Label>

      <!--Feet Input -->
      <TextField fx:id="feetField" layoutX="180.0" layoutY="60.0" />

      <!-- Inches Label -->
      <Label layoutX="60.0" layoutY="110.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Inches">
         <font>
            <Font name="Verdana Bold" size="14.0" />
         </font>
      </Label>

      <!--Inches Input -->
      <TextField fx:id="inchesField" layoutX="180.0" layoutY="110.0" />

      <!-- Convert Button -->
      <Button fx:id="convertButton" layoutX="25.0" layoutY="175.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleConvert" prefWidth="400.0" style="-fx-background-color: blue;" text="Convert To" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="24.0" />
         </font>
      </Button>

      <!--Centimeter Label -->
      <Label layoutX="60.0" layoutY="250.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Centimeters">
         <font>
            <Font name="Verdana Bold" size="14.0" />
         </font>
      </Label>

      <!--Centimeter Output -->
      <TextField fx:id="cmField" editable="false" layoutX="180.0" layoutY="245.0" />

      <!--Clear Button -->
      <Button fx:id="clearButton" layoutX="100.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleClear" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: purple;" text="Clear" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="14.0" />
         </font>
      </Button>

      <!--Exit Button -->
      <Button fx:id="exitButton" layoutX="280.0" layoutY="320.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: Red;" text="Exit" textFill="WHITE">
         <font>
            <Font name="Verdana Bold" size="14.0" />
         </font></Button>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</AnchorPane>
