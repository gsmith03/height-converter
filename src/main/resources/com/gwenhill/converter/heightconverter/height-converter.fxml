<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<!-- StackPane is the root pane and the controller -->
<StackPane prefHeight="400.0" prefWidth="508.0"
           style="-fx-background-color: aqua;
               -fx-background-radius: 20;
               -fx-border-color: black;
               -fx-border-width: 10;
               -fx-border-radius: 20 ;
               -fx-border-insets: 10 ;"
           xmlns="http://javafx.com/javafx/17.0.12"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.gwenhill.converter.heightconverter.HeightConverterController">
   <!-- Borders -->
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>

   <!-- Holds all the UI components -->
   <AnchorPane fx:id="rootPane" prefHeight="370.0" prefWidth="478.0"
               style="-fx-background-color: aqua;
               -fx-background-radius: 20;" >

      <children>


         <!--Height Converter Title -->
         <Label layoutX="93.0" layoutY="26.0" text="HEIGHT CONVERTER">
            <font>
               <Font name="Verdana Bold" size="30.0" />
            </font>
         </Label>

         <!-- Line Separator -->
         <Line endX="443.5" endY="53.0" layoutX="37.0" layoutY="19.0" startX="-3.5" startY="53.0" />

         <!-- Feet Label -->
         <Label layoutX="141.0" layoutY="93.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Feet">
            <font>
               <Font name="Verdana Bold" size="14.0" />
            </font></Label>

         <!--Feet Input -->
         <TextField fx:id="feetField" layoutX="228.0" layoutY="89.0" />

         <!-- Inches Label -->
         <Label layoutX="143.0" layoutY="137.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Inches">
            <font>
               <Font name="Verdana Bold" size="14.0" />
            </font>
         </Label>

         <!--Inches Input -->
         <TextField fx:id="inchesField" layoutX="228.0" layoutY="133.0" />

         <!-- Convert Button -->
         <Button fx:id="convertButton" layoutX="66.0" layoutY="187.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleConvert" prefWidth="400.0" style="-fx-background-color: blue;" text="Convert To" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="Verdana Bold" size="24.0" />
            </font>
         </Button>

         <!--Centimeter Label -->
         <Label layoutX="71.0" layoutY="258.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Total Centimeters">
            <font>
               <Font name="Verdana Bold" size="14.0" />
            </font>
         </Label>

         <!--Centimeter Output -->
         <TextField fx:id="cmField" editable="false" layoutX="254.0" layoutY="254.0" />

         <!-- Inches Output Label -->
         <Label layoutX="101.0" layoutY="305.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" text="Total Inches">
            <font>
               <Font name="Verdana Bold" size="14.0" />
            </font>
         </Label>

         <!-- Inches Output Textfield -->
         <TextField fx:id="inchesOutput" editable="false" layoutX="254.0" layoutY="292.0" />

         <!--Clear Button -->
         <Button fx:id="clearButton" layoutX="95.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleClear" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: #A020F0;" text="Clear" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="Verdana Bold" size="14.0" />
            </font>
         </Button>

         <!--Exit Button -->
         <Button fx:id="exitButton" layoutX="350.0" layoutY="355.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="30.0" prefWidth="75.0" style="-fx-background-color: Red;" text="Exit" textFill="WHITE">
            <font>
               <Font name="Verdana Bold" size="14.0" />
            </font></Button>

      </children>

   </AnchorPane>
</StackPane>
